{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Goze Spring Boot Backend",
            "type": "shell",
            "command": "cd server && mvn clean package -DskipTests && java -jar -Dspring.profiles.active=${input:profile} target/*.jar",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Debug Goze Spring Boot Backend",
            "type": "shell",
            "command": "cd server && mvn spring-boot:run -Dspring-boot.run.jvmArguments='-Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005' -Dspring-boot.run.arguments='--spring.profiles.active=${input:profile}'",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Run Goze Next Client Server",
            "type": "shell",
            "command": "cd client && rm -rf node_modules package-lock.json && npm install && npm run build && npm run dev",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Debug Goze Next Client Server",
            "type": "shell",
            "command": "cd client && npm run dev",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Debug Both Server and Client",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Debug Goze Spring Boot Backend",
                "Debug Goze Next Client Server"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "profile",
            "type": "pickString",
            "description": "Select Spring Boot profile",
            "options": [
                "local",
                "dev",
                "prod"
            ],
            "default": "local"
        }
    ]
}
